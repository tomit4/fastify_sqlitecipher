doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Petite-Vue
    link(rel="stylesheet" href="styles.css")
    body
      h2 Petite-Vue Counter
      template#counter-template My count is {{ count }}
        button(@click="inc") ++
      div(v-scope="Counter({ initialCount: 1 })")
      div(v-scope="Counter({ initialCount: 2 })")
      br
      form(action="/loggedin" method="post" onSubmit="token()")
        label(for="passwd") Password:
        br
        input(type="password" id="passwd" name="passwd" )
        br
        input(type="submit" value="submit")
      script(src="../vue.js" defer init)
      script(src="../fetch.js" defer init)
      script(src="../petite-vue.js")
